{% extends "base.html.twig" %}

{% block body %}

<div class="container col-md-8 text-center mt-3">
<div style="background-color: pink"> 
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="font family">Store List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('store_add') }}">
                <img src="{{ asset('images/buttons/add.jpg') }}" width="50" height="50">
            </a>
        </th>
    </tr>
   
    <tr>
        <th class="font family">Id</th>
        <th class="font family">Name</th>
        <th class="font family">Image</th>
        <th class="font family">Actions</th>
    </tr>

    {% for store in stores %}
        <tr>
            <td>{{ store.id }}</td>
            <td>{{ store.name }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('store_detail', {'id' : store.id }) }}">
                    <img src="{{ store.image }}" width="150" height="150">
                </a>
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('store_detail', {'id' : store.id }) }}">
                    <img src="{{ asset('images/buttons/detail.jpg') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('store_edit', {'id' : store.id }) }}">
                    <img src="{{ asset('images/buttons/edit.jpg') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('store_delete', {'id' : store.id }) }}"
                onclick="return confirm('Are you sure to delete this store ?');"
                >
                    <img src="{{ asset('images/buttons/delete.jpg') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}
