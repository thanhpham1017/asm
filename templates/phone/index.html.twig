{% extends "base.html.twig" %}

{% block body %}
	<div class="container col-md-8 text-center mt-3">
		<table class="table table-light">
			<tr>
				<th colspan="3">
					<h1 class="font family">Phone List</h1>
				</th>
				<th>
					<a class="text-decoration-none" href="{{ path('phone_add') }}">
						<img src="{{ asset('images/buttons/add.jpg') }}" width="50" height="50">
					</a>
				</th>
			</tr>
			<tr>
				<th class="font family">Id</th>
				<th class="font family">Title</th>
				<th class="font family">Cover</th>
				<th class="font family">Actions</th>
			</tr>
			{% for phone in phones %}
				<tr>
					<td>{{ phone.id }}</td>
					<td>{{ phone.title }}</td>
					<td>
						<a href="{{ path('phone_detail', {'id' : phone.id }) }}">
							<img src="{{ phone.image }}" width="150" height="150">
						</a>
					</td>
					<td>
						<a class="text-decoration-none" href="{{ path('phone_detail', {'id' : phone.id }) }}">
							<img src="{{ asset('images/buttons/detail.jpg') }}" width="40" height="40">
						</a>
						<a class="text-decoration-none" href="{{ path('phone_edit', {'id' : phone.id }) }}">
							<img src="{{ asset('images/buttons/edit.jpg') }}" width="40" height="40">
						</a>
						<a class="text-decoration-none" href="{{ path('phone_delete', {'id' : phone.id }) }}" onclick="return confirm('Are you sure to delete this phone ?');">
							<img src="{{ asset('images/buttons/delete.jpg') }}" width="40" height="40">
						</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
